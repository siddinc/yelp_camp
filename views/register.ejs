<% include partials/header %>

<div class="container">
    <h1 class="display-4 text-center">Sign Up</h1>
    <hr class="my-4">
    <div class="row">
        <form action="/register" method="POST" class="mx-auto">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon3">Username</span>
                </div>
                <input type="text" class="form-control form-control-lg" name="username" required="true">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon3">Password</span>
                </div>
                <input type="password" class="form-control form-control-lg" name="password" required="true">
            </div>

            <button class="btn btn-success btn-block btn-lg" type="submit">Register</button>
        </form>
    </div>
    <br>
</div>

<% include partials/footer %>