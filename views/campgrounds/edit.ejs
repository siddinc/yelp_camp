<% include ../partials/header %>

<div class="container">
    <h1 class="display-4 text-center">Edit <%= campground.name %></h1>
    <hr class="my-4">
    <div class="row">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="mx-auto">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon3">Name</span>
                </div>
                <input type="text" class="form-control form-control-lg" name="campground[name]" value="<%= campground.name %>" required="true">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon3">Image URL</span>
                </div>
                <input type="url" class="form-control  form-control-lg" name="campground[image]" value="<%= campground.image %>" required="true">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="basic-addon3">Description</span>
                </div>
                <input type="text" class="form-control form-control-lg" name="campground[description]" value="<%= campground.description %>" required="true">
            </div>

            <button class="btn btn-success btn-block btn-lg" type="submit">Submit</button>
        </form>
    </div>
    <br>
    <div class="container text-center">
        <a class="nav-link" href="/campgrounds/<%= campground._id %>"><button class="btn btn-primary btn-md">Go back</button></a>
    </div>
    
</div>

<% include ../partials/footer %>